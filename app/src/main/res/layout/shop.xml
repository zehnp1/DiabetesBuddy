<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/dschungel"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/shopTitel"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:baselineAligned="false"
        android:background="@drawable/border"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shopDuHast"
            android:id="@+id/textView4"
            android:gravity="center_vertical"
            android:layout_weight="0.51" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/anzahlBananen"
            android:id="@+id/textView8"
            android:gravity="center"
            android:layout_weight="0.14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="bananen"
            android:id="@+id/textView5"
            android:gravity="center_vertical"
            android:layout_weight="0.61" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/banana" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:baselineAligned="false"
                android:background="@drawable/border"
                android:weightSum="1"
                android:id="@+id/linearLayout6"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="137dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/sonnenbrille" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/preisSkate"
                            android:id="@+id/skatePrice"
                            android:gravity="center|right" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/skatBanana"
                            android:src="@drawable/banana" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kaufen"
                        android:id="@+id/skate_kaufen"
                        android:background="@drawable/button"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:baselineAligned="false"
                android:background="@drawable/border"
                android:weightSum="1"
                android:id="@+id/linearLayout5"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="137dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/board" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/preisSkate"
                            android:id="@+id/textView2"
                            android:gravity="center|right" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/imageView10"
                            android:src="@drawable/banana" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kaufen"
                        android:id="@+id/button2"
                        android:background="@drawable/button"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:baselineAligned="false"
                android:background="@drawable/border"
                android:weightSum="1"
                android:id="@+id/linearLayout8"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="137dp"
                    android:id="@+id/imageView13"
                    android:src="@drawable/zufall" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/preisZufall"
                            android:id="@+id/textView7"
                            android:gravity="center|right" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/imageView14"
                            android:src="@drawable/banana" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kaufen"
                        android:id="@+id/button4"
                        android:background="@drawable/button"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>