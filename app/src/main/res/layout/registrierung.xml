<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" >

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dschungel"
    android:focusable="true">







    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:src="@drawable/holztafellang1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registrierung"
        android:id="@+id/RegistrierungTitel"
        android:textColor="#FFCB3B"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/nameFeld"
        android:textStyle="bold"
        android:autoText="false"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Vorname"
        android:ems="10"
        android:id="@+id/vornameFeld"
        android:textStyle="bold"
        android:autoText="true"
        android:layout_below="@+id/nameFeld"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textWebEmailAddress"
        android:hint="eMail"
        android:ems="10"
        android:id="@+id/eMailFeld"
        android:textStyle="bold"
        android:autoText="true"
        android:layout_below="@+id/vornameFeld"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Benutzername"
        android:ems="10"
        android:id="@+id/usernameFeld"
        android:textStyle="bold"
        android:autoText="true"
        android:layout_below="@+id/eMailFeld"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Passwort"
        android:hint="Passwort"
        android:textStyle="bold"
        android:layout_below="@+id/usernameFeld"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Passwort"
        android:textStyle="bold"
        android:layout_below="@+id/Passwort"
        android:layout_centerHorizontal="true"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/maleCheckBox"
        android:checked="false"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/RegistrierungTitel"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/femaleCheckBox"
        android:layout_alignStart="@+id/femaleCheckBox" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/femaleCheckBox"
        android:checked="false"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Geschlecht:"
        android:id="@+id/geschlecht"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/maleCheckBox"
        android:layout_toLeftOf="@+id/femaleCheckBox"
        android:layout_toStartOf="@+id/femaleCheckBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textStyle="bold"
        android:id="@+id/birthday"
        android:layout_below="@+id/maleCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:hint="Geburtsdatum" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight"
        android:layout_below="@+id/birthday"
        android:layout_centerHorizontal="true"
        android:hint="Gewicht in kg"
        android:textStyle="bold"
        />


</RelativeLayout>

    </ScrollView>