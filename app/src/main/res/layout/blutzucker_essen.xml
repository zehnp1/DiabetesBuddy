<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/dschungel"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tageswerte"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Werte vom:"
            android:id="@+id/textView"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:id="@+id/sugarDate"
            android:layout_marginLeft="5dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#6D8896">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Uhrzeit"
            android:background="@drawable/border_table"
            android:layout_weight="0.3"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:text="BZ"
            android:background="@drawable/border_table"
            android:layout_weight="0.15"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:text="BE"
            android:background="@drawable/border_table"
            android:layout_weight="0.15"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:text="Basal"
            android:background="@drawable/border_table"
            android:layout_weight="0.2"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:layout_weight="0.25"
            android:text="Bolus"
            android:background="@drawable/border_table"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:layout_weight="0.2"
            android:text="Notiz"
            android:background="@drawable/border_table"
            android:gravity="center" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.60" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sugarScroll">
        <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sugarComp1">
        </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp2">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp3">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp4">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp5">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp6">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp7">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp8">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp9">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
            <com.example.pzehnder.diabetesbuddy.components.SugarCompWidget
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugarComp10">
            </com.example.pzehnder.diabetesbuddy.components.SugarCompWidget>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSugar"
        android:text="Neuer Wert HinzufÃ¼gen"
        android:textColor="#000000"
        android:textSize="18sp"

        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>