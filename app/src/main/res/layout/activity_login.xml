<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="@drawable/dschungel">>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/holztafellang1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DiabetesBuddy"
        android:id="@+id/LoginTitel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#FFCB3B"
        android:textSize="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Benutzername"
        android:ems="10"
        android:id="@+id/nameFeld"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/LoginTitel"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:autoText="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Passwort"
        android:layout_below="@+id/nameFeld"
        android:layout_alignLeft="@+id/nameFeld"
        android:layout_alignStart="@+id/nameFeld"
        android:hint="Passwort"
        android:textStyle="bold"/>

    <Button
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:text="Login"
        android:id="@+id/homeButton1"
        android:layout_marginTop="32dp"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/Passwort"
        android:layout_alignRight="@+id/Passwort" />

    <Button
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:text="Registrieren"
        android:id="@+id/Registrieren"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/homeButton1"
        android:layout_alignLeft="@+id/homeButton1"
        android:layout_marginTop="5dp" />

</RelativeLayout>


